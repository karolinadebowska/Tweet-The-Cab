<%= erb :header %>

        <div>
            <h2>PAST JOURNEYS</h2>
            <table>
            <tr>
                <th>DRIVER</th>
                <th>PICK UP LOCATION</th>
                <th>DROP OFF LOCATION</th>
                <th>START</th>
                <th>FINISH</th>
            </tr>
            <% @journeys.each do |j|  %>
            <tr>
                <td><%=h j[j.size-1]%></td>
                <td><%=h j[3]%></td>
                <td><%=h j[4]%></td>
                <td><%=h j[5]%></td>
                <td><%=h j[6]%></td>
            </tr>
            <%end%>
            </table> 
        </div>
        <div>
            <!--using sessions or cookies to store the data-->
            <h2>Edit Your Personal Info</h2>
            <form method="post">
                <label for="fname">First Name</label>
                <input type="text" id="fname" name="firstname" placeholder="Your first name.." value="<%=@userdetails[2]%>">
                <br>
                <label for="sname">Surname</label>
                <input type="text" id="sname" name="surname" placeholder="Your surname.." value="<%=@userdetails[3]%>">
                <br>
                <label for="dob">Date of Birth</label>
                <input type="date" id="dob" name="dob" placeholder="Your DoB.." value="<%=@userdetails[1]%>">
                <br>
                <label for="phone">Phone Number</label>
                <input type="text" id="phone" name="phone" placeholder="Your phone number.." value="<%=@userdetails[4]%>">
                <br>
                <input type="submit" value="Update"><!--a submit button-->
                <input type="reset"><!--a reset button-->
            </form>
        </div>

<%= erb :footer %>