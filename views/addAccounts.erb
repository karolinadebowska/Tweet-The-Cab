<%= erb :header %>

       <center>
       <fieldset class="add-driver">
           <legend>Add a driver</legend>
                <form style="margin-left:0" action='/add' method="post">
                    <label for="firstName"><b>First Name</b></label>
                    <input type="text" placeholder="Enter First Name" name="firstName" required>
                    <label for="secondName"><b>Surname</b></label>
                    <input type="text" placeholder="Enter Surname" name="secondName" required>
                    <label for="phone"><b>Phone Number</b></label>
                    <input type="tel" placeholder="Enter Phone Number" name="phone" required>
                    <label for="carMake"><b>Car Make</b></label>
                    <input type="text" placeholder="Enter a Car Make" name="carMake" required>
                    <label for="carModel"><b>Car Model</b></label>
                    <input type="text" placeholder="Enter a Car Model" name="carModel" required>
                    <label for="colour"><b>Colour of a car</b></label>
                    <input type="text" placeholder="Enter a Colour" name="colour" required>
                    <label for="licence"><b>Licence Plate</b></label>
                    <input type="text" placeholder="Enter a Licence Plate" name="licence" required>
                    <label for="seats"><b>Seats</b></label>
                    <br>
                    <input type="number" placeholder="Enter the number of seats" name="seats" min="1" max="10" style="padding: 12px 20px; width:9vw;"required>
                    <br>
                    <label for="twitter"><b>Twitter</b></label>
                    <input type="text" placeholder="Enter Twitter Handle" name="twitter" required>
                    <label for="city"><b>City</b></label>
                    <select class="city-select" name="city" required>
                        <option value="Sheffield">Sheffield</option>
                        <option value="Birmingham">Birmingham</option>
                    </select>
                    <button type="submit">Submit</button>
                    </form>
        </fieldset>
        </center>

<%= erb :footer %>